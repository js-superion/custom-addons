<odoo>
    <data>

        <record model="ir.actions.act_window" id="action_jbtj">
            <field name="name">加班统计</field>
            <field name="res_model">test.jbtj</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- 图书表单视图 -->
        <record id="view_jbtj_form" model="ir.ui.view">
            <field name="name">test.jbtj.form</field>
            <field name="model">test.jbtj</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <printbutton htmlfrom="client"  string="打印" type="object" name="print" model="test.jbtj" class="oe_highlight" />
                    </header>
                    <sheet>
                        <notebook>
                            <page string="加班信息" colspan="4">


                                <group>

                                        <field name="report_month" class="oe_inline"/>
                                        <field name="content" class="oe_inline"/>

                                        <field name="start_date" class="oe_inline"/>
                                        <field name="end_date" class="oe_inline"/>
                                </group>

                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 表格视图 -->
        <record id="view_jbtj_tree" model="ir.ui.view">
            <field name="name">test.jbtj.tree</field>
            <field name="model">test.jbtj</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="report_month"/>
                    <field name="content"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>

            </field>

        </record>

        <!-- 查询视图-->
        <record id="view_test_jbtj_search" model="ir.ui.view">

            <field name="name">test.jbtj.tree</field>
            <field name="model">test.jbtj</field>
            <field name="arch" type="xml">
                <search>
                    <field name="report_month"/>
                </search>
            </field>
        </record>


    </data>
</odoo>