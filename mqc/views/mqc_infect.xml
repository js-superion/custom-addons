<odoo>
    <data>

        <record model="ir.actions.act_window" id="action_mqc_infect">
            <field name="name">院感质控指标</field>
            <field name="res_model">mqc.infect</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- 主界面的列表 -->
        <record id="view_infect_form" model="ir.ui.view">
            <field name="name">mqc.infect.form</field>
            <field name="model">mqc.infect</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook colspan="1">
                            <page string="医院感染发生情况">
                                <group>
                                    <field name="out_case" class="oe_inline"/>
                                    <field name="infect_pat" class="oe_inline"/>
                                    <field name="infect_rate" class="oe_inline"/>
                                    <field name="infect_cases" class="oe_inline"/>
                                    <field name="infect_cases_rate" class="oe_inline"/>
                                    <field name="part_ids" class="oe_inline"/>
                                    <field name="hand_ids" class="oe_inline"/>
                                    <field name="env_ids" class="oe_inline"/>
                                    <field name="infect_icu_id" class="oe_inline"/>
                                    <field name="devices_ids" class="oe_inline"/>
                                    <field name="ssi_ids" class="oe_inline"/>
                                    <field name="rbm_ids" class="oe_inline"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 输血科建设及检测技术 -->
        <record id="view_infect_icu_form" model="ir.ui.view">
            <field name="name">mqc.infect.icu.form</field>
            <field name="model">mqc.infect.icu</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook colspan="2">
                            <page string="ICU医院感染发生情况">
                                <group>
                                    <field name="create_type" class="oe_inline"/>
                                    <field name="dept_emp_num" class="oe_inline"/>
                                    <field name="required_device" class="oe_inline"/>
                                    <field name="shortage_device" class="oe_inline"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  血液成分质量 -->
        <record id="view_blood_qlty_form" model="ir.ui.view">
            <field name="name">mqc.blood.qlty.form</field>
            <field name="model">mqc.blood.qlty</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook colspan="1">
                            <page string="血液成分质量反馈">
                                <group>
                                    <field name="units_name" class="oe_inline"/>
                                    <field name="report_month" class="oe_inline"/>
                                    <field name="detail_ids" class="oe_inline">
                                        <tree string="血液成分质量明细" editable="bottom">
                                            <field name="component_id"/>
                                            <field name="qlty_des"/>
                                            <field name="bld_bag_no"/>
                                            <field name="bld_spec"/>
                                        </tree>
                                        <form string="血液成分质量明细">
                                            <group>
                                                <field name="component_id"/>
                                                <field name="qlty_des"/>
                                                <field name="bld_bag_no"/>
                                                <field name="bld_spec"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  输血职能管理 -->
        <record id="view_blood_manage_form" model="ir.ui.view">
            <field name="name">mqc.blood.manage.form</field>
            <field name="model">mqc.blood.manage</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook colspan="1">
                            <page string="输血职能管理">
                                <group colspan="4">
                                    <group colspan="2">
                                        <field name="units_name" class="oe_inline"/>
                                        <field name="detail_ids" class="oe_inline">
                                            <tree string="管理项目明细" editable="bottom">
                                                <field name="quota_id"/>
                                                <field name="rate"/>
                                                <field name="remark"/>
                                            </tree>
                                            <form string="管理项目明细">
                                                <group>
                                                    <field name="quota_id"/>
                                                    <field name="rate"/>
                                                    <field name="remark"/>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                                    <group colspan="2">
                                        <field name="report_month" class="oe_inline"/>
                                        <field name="react_ids" class="oe_inline">
                                            <tree string="不良反应报告" editable="bottom">
                                                <field name="react_id"/>
                                                <field name="cases"/>
                                            </tree>
                                            <form string="检测技术填写">
                                                <group>
                                                    <field name="cases"/>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  质量安全工作意见反馈 -->
        <record id="view_blood_advise_form" model="ir.ui.view">
            <field name="name">mqc.blood.advise.form</field>
            <field name="model">mqc.blood.advise</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook colspan="1">
                            <page string="意见反馈">
                                <group>
                                    <field name="units_name" class="oe_inline"/>
                                    <field name="report_month" class="oe_inline"/>
                                    <field name="advise" class="oe_inline"/>
                                    <field name="safe_advise" class="oe_inline"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- 表格视图 -->
        <record id="view_mqc_blood_tree" model="ir.ui.view">
            <field name="name">mqc.blood.tree</field>
            <field name="model">mqc.blood</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="mqc_id"/>
                </tree>

            </field>

        </record>

        <!-- 查询视图-->
        <record id="view_mqc_blood_search" model="ir.ui.view">

            <field name="name">mqc.mqc.search</field>
            <field name="model">mqc.blood</field>
            <field name="arch" type="xml">
                <search>
                    <field name="create_date"/>
                </search>
            </field>
        </record>


    </data>
</odoo>